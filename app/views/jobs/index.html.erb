<div id="container">
	<div class="panel panel-primary borderColor">
 		<div class="panel-heading panelHeading">
    		<center>
    			<span class="tagLine">JOBS BOARD APPLICATION</span><br>
    			<%= link_to image_tag("jobLogo.png", alt: "Pinned", size: "160x185")%> <br>	
      			<span class="text">“Opportunities don't often come along. So, when they do, you have to grab them.” <br> – Audrey Hepburn</span>
    		</center>
 		 </div>
	</div>
	<span class="jobText">FEATURED JOBS</span>
	<p class="postJob"><%= link_to "POST A JOB", new_job_path, class: "btn btn-success" %></p>
	<div class="jobDiv">
		<% @jobs.each_with_index do |job, index| %>
  			<div class="panel panel-primary panelHeading2">
  				<span class="pin"><%= link_to image_tag("pin.png", alt: "Pinned", size: "30x35")%></span>
  				<div class="panel-heading panelJobHeading">
  					<h4 class="jobTitle"><b><%= job.title %></b></h4>
  				</div>
  				<div class="panel-body">
  					<table>
  						<tr>
  							<td>
  								<span>Company:</span>
  								<span class="jobCompany"> <%= job.company %></span>
  								<br><br>
  								<span><b><%= link_to "Link to Job", job.url %></b></span>  					
  							</td>	
  						</tr>
					</table>
  				</div>
  			</div>
  		<% end %>
	</div>
	<center>
  		<p><%= paginate @jobs %></p>
	</center>
</div>