<div class="panel panel-primary">
	<div class="panel-heading" id="panelJobHeading">				
  		<h4 id="jobTitle"><b>New Job</b></h4>
  	</div>
  	<div class="panel-body">	
  		<%= simple_form_for @job , html: { class: "form-horizontal"} do |form| %>
	  	<div class="form-group">
	  		<%= form.input :title, label: "Job title" %>
	  	</div>
	  	<div class="form-group">
	  		<%= form.input :company, label: "Your company" %>
	  	</div>
	  	<div class="form-group">
	 		<%= form.input :url, label: "Link to job" %>
	  	</div>
	  	<hr/>
	  	<center>
	  		<%= form.button :submit, label: "Post Job", class: "btn btn-success"%>
	  	</center>
		<% end %>
  	</div>
</div>
